rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{id} {
      allow read;
    }
    match /members/{id} {
      allow read;
    }
    match /companies/{id} {
      allow read;
    }
    match /events/{id} {
      allow read;
    }
    match /{document=**} {
      allow read, write: if false; // Only allow writes through API
    }
  }
}